        <p class="subtitle">Connecting Food Donors with Recipients</p>
        <div class="features">
            <div class="feature">
                <div class="feature-icon">üè™</div>
                <div class="feature-text">Donors List Food</div>
            </div>
            <div class="feature">
                <div class="feature-icon">üîç</div>
                <div class="feature-text">Recipients Browse</div>
            </div>
            <div class="feature">
                <div class="feature-icon">ü§ù</div>
                <div class="feature-text">Smart Matching</div>
            </div>
            <div class="feature">
                <div class="feature-icon">üöö</div>
                <div class="feature-text">Easy Pickup</div>
            </div>
        </div>
    </div>
</body>
</html>
